<%= render 'shared/banner', studio: @studio.name, img_path: cl_image_path(@studio.photos.first.key) %>
<div class="container">
  <div class="row">
    <div class="col-md-8 p-5">
      <div class="card-text mb-3 py-3">
        <h2 class="fw-bold">Details</h2>
        <p class="m-0"><%= "🏠Address: #{@studio.location}" %></p>
        <p class="m-0"><%= "💴Rate per hour: #{@studio.rate} yen" %></p>
      </div>
      <div class="card-description">
      <h2 class="fw-bold">Description</h2>
      <p class="m-0">Strategically located in the city center, easy access from the nearest station.</p>
      <p class="m-0">Large space accommodating up to 50 people at once.</p>
      <p class="m-0">Suitable for yoga classes, events, family caterings etc.</p>
      </div>
    </div>
    <div class="form form-shadow col-md-4">
      <h3>Book your Studio:</h3>
      <%= render 'shared/form' %>
    </div>
  </div>
</div>

