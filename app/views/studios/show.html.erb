<%= render 'shared/banner', studio: @studio.name, img_path: cl_image_path(@studio.photos.first.key) %>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <p><%= "Address: #{@studio.location}" %></p>
      <p><%= "Rate: #{@studio.rate}" %></p>
    </div>
    <div class="form form-shadow col-md-4">
      <h3>Book your Studio:</h3>
      <%= render 'shared/form' %>
    </div>
  </div>
</div>

