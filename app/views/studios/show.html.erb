<%= render 'shared/banner', studio: @studio.name, img_path: cl_image_path(@studio.photos.first.key) %>
<div class="container">
  <div class="row">
    <div class="col-md-8 p-5">
      <div class="card-details">
        <p><i class="fas fa-home"></i> </p>
        <p><i class="fas fa-users"></i> </p>
        <p><i class="fas fa-map-marked-alt"></i> <%= @studio.location %></p>
        <p><i class="fas fa-yen-sign"></i> <%= @studio.rate %> per hour</p>
      </div>
      <div class="card-description">
      <h2 class="fw-bold">Description</h2>
      <p class="m-0">studio.desription</p>
      </div>
    </div>
    <div class="form form-shadow col-md-4">
      <h3>Book your Studio:</h3>
      <%= render 'shared/form' %>
    </div>
  </div>
</div>

