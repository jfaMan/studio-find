<div class="container">
  <h5 class="my-4 mx-1">My Bookings</h5>
  <% @bookings.each do |b| %>
  <div class="cards-owner-booking">
    <div>
      <%= cl_image_tag(b.studio.photos.first.key, width: 240, height: 120, crop: :fill, class: "image-owner-booking") %>
    </div>
    <div class="cards-owner-booking-grow">
      <p><strong><%= b.studio.name %> </strong></p>
      <p><em>Booked by: <%= b.studio.location %></em></p>
      <p><i class="far fa-calendar-alt"></i> <%= b.start_date.strftime('%b %dth, %Y %H:%M') %> ~ <%= b.end_date.strftime('%b %dth, %Y %H:%M') %></p>
      <p><em><%= b.status.capitalize %></em></p>
    </div>
    <div class="cards-confirmation">
      <% if b.pending? %>
        <div class="edit-booking d-flex flex-column align-items-end text-dark">
        <%= link_to edit_booking_path(b) do %>
        <p>edit<i class="far fa-edit text-success"></i></p>
        <% end %>
        <%= link_to booking_path(b), method: :delete, data: { confirm: "Are you sure?"} do %>
        <p>cancel<i class="far fa-window-close text-warning"></i></p>
        </div>
      <% end %>
    </div>
      <% end %>
    </div>
    </div>
  <% end %>

  <div class = "container mt-5">
    <%= link_to studios_path(query: params[:query]), class: "btn-gradient" do %>
      <i class="fas fa-long-arrow-alt-left"></i>See more studios
    <% end %>
  </div>
</div>







