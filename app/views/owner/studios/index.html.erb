<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/6538903/pexels-photo-6538903.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940);">
  <div class="container">
    <h1>My Studios</h1>
  </div>
</div>
  <%= render 'modal' %>
<div class="container mt-4 mb-5">
  <div class="owner-cards">
    <% @studios.each do |studio| %>
      <div class="card-body">
        <%= cl_image_tag(studio.photos.first.key, class: 'card-body-img', crop: :fill) if studio.photos.attached? %>
        <p class="card-title mb-0 mt-3 font-weight-bold"><%= studio.name %></p>
        <p class="card-text mb-0"><i class="fas fa-map-marked-alt"></i> <%= studio.location %></p>
        <div class="select d-flex justify-content-between">
          <p class="card-text mb-0"><i class="fas fa-yen-sign"></i> <%= studio.rate %> per hour</p>
          <%= link_to studio_path(studio) do %>
            <i class="fas fa-arrow-circle-right"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

